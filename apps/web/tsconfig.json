{
  "extends": "@workspace/typescript-config/nextjs.json",
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "@/*": ["./*"],
      "@workspace/customs-codes": ["../../packages/customs-codes/src/index.ts"],
      "@workspace/aviation-stats": [
        "../../packages/aviation-stats/src/index.ts"
      ],
      "@workspace/car-import-taxes": [
        "../../packages/car-import-taxes/src/index.ts"
      ],
      "@workspace/data-insights": ["../../packages/data-insights/src/index.ts"],
      "@workspace/drug-prices": ["../../packages/drug-prices/src/index.ts"],
      "@workspace/inflation-tracker": [
        "../../packages/inflation-tracker/src/index.ts"
      ],
      "@workspace/payroll": ["../../packages/payroll/src/index.ts"],
      "@workspace/prishtina-building-permits": [
        "../../packages/prishtina-building-permits/src/index.ts"
      ],
      "@workspace/war-records": ["../../packages/war-records/src/index.ts"],
      "@workspace/ui/*": ["../../packages/ui/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
